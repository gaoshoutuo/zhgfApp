<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <!-- <item name="windowNoTitle">true</item> -->//所有窗口无标题栏
    </style>

    <style name="AppTheme.PopOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--toolbar标题文字颜色-->
    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item><!--右边按钮的颜色-->
        <item name="android:textColorPrimary">@android:color/white</item><!--文字颜色-->
    </style>
    <!-- toolbar弹出菜单样式 -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>
    <!--加载对话窗-->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />

    <style name="Theme.Light.LoadingDialog" parent="@style/BaseDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="TextAppearanceBig" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="notify_view_divider">
        <item name="android:background">#66ffffff</item>
    </style>

    <style name="list_notify_cancel_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">45.0dip</item>
        <item name="android:text">撤消</item>
    </style>

    <style name="list_notify_view">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_notify</item>
        <item name="android:minHeight">25.0dip</item>
    </style>

    <style name="item_title">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/item_title</item>
    </style>

    <style name="item_secondary_text">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ff999999</item>
    </style>

    <style name="item_comment_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff999999</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_local">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/list_item_local_bg</item>
    </style>

    <style name="item_abstract">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/item_abstract</item>
    </style>

    <style name="item_image">
        <item name="android:background">@drawable/small_image_holder_listpage</item>
        <item name="android:layout_width">104.0dip</item>
        <item name="android:layout_height">72.0dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="item_image_gap">
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="item_comment_content">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff747474</item>
    </style>

    <style name="favorite_del_btn">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/favorite_delete_btn</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">删除</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/hide_bottom</item>
        <item name="android:windowExitAnimation">@anim/show_bottom</item>
    </style>

    <!--开始学习按钮背景色 -->
    <style name="study_button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/study_button</item>
    </style>

    <style name="testSorceGreat_button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/testSorceGreat_button</item>
    </style>

    <style name="testSorceGood_button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/testSorceGood_button</item>
    </style>

    <style name="testSorceBad_button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/testSorcebad_button</item>
    </style>
    <!--停止计时按钮背景色 -->
    <style name="stop_button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/stop_button</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>



    <style name="AppTheme.Translucent">
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Translucent.Setting">
        <item name="colorPrimary">@color/designer_news</item>
        <item name="colorAccent">@color/designer_news</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="TextAppearance.FloatLabelHint" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">?android:colorAccent</item>
    </style>
    <style name="TextAppearance.DarkButton" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
