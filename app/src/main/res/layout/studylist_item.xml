<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/study_iv"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:src="@drawable/icons8_study55"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学习资料1"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/study_iv"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/study_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="49dp"
        android:text="开始学习"
        android:textColor="@color/colorWhite"
        android:drawableLeft="@drawable/icons8_pen48"
        android:theme="@style/study_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title_tv"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.916" />
    <View
        android:id="@+id/lineV"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#BDBDBD"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/study_btn"
        app:layout_constraintVertical_bias="0.02" />
    <Button
        android:id="@+id/test_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="49dp"
        android:text="开始考试"
        android:textColor="@color/colorWhite"
        android:drawableLeft="@drawable/icons8_pen48"
        android:theme="@style/study_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title_tv"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.916" />
    <Button
        android:id="@+id/testScoresGood_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="49dp"
        android:text=""
        android:textSize="@dimen/dp_16"
        android:textColor="@color/colorWhite"
        android:drawableLeft="@drawable/icons8_good40"
        android:theme="@style/testSorceGood_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title_tv"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.916" />
    <Button
        android:id="@+id/testScoresGreat_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="49dp"
        android:text=""
        android:textSize="@dimen/dp_16"
        android:textColor="@color/colorWhite"
        android:drawableLeft="@drawable/icons8_good40"
        android:theme="@style/testSorceGreat_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title_tv"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.916" />
    <Button
        android:id="@+id/testScoresBad_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="49dp"
        android:text=""
        android:textSize="@dimen/dp_16"
        android:textColor="@color/colorWhite"
        android:drawableLeft="@drawable/icons8_bad40"
        android:theme="@style/testSorceBad_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title_tv"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.916" />
</android.support.constraint.ConstraintLayout>
