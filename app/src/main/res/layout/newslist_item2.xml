<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:id="@+id/newsInfo_layout">
    <ImageView
        android:id="@+id/right_image"
        android:layout_width="104.0dip"
        android:layout_height="72.0dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/small_image_holder_listpage"
        android:scaleType="centerCrop"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/item_title"
        style="@style/item_title"
        android:layout_width="243dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/right_image"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />


    <ImageView
        android:id="@+id/item_image_0"
        style="@style/item_image"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/item_title" />


    <ImageView
        android:id="@+id/item_image_1"
        style="@style/item_image"
        app:layout_constraintLeft_toRightOf="@+id/item_image_0"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/item_image_2"
        android:layout_marginRight="8dp"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/item_title" />


    <ImageView
        android:id="@+id/item_image_2"
        style="@style/item_image"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/item_title" />

    <ImageView
        android:id="@+id/time_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        app:srcCompat="@drawable/icons8_past12"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="135dp"
        app:layout_constraintTop_toBottomOf="@+id/item_title" />

    <TextView
        android:id="@+id/publish_time"
        style="@style/item_secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:text = "2017年9月30日"
        android:layout_marginTop="133dp"
        app:layout_constraintTop_toBottomOf="@+id/item_title"
        app:layout_constraintLeft_toRightOf="@+id/time_iv"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/comment_count"
        style="@style/item_secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:text = "1"
        android:layout_marginTop="135dp"
        app:layout_constraintTop_toBottomOf="@+id/item_title"
        app:layout_constraintLeft_toRightOf="@+id/publish_time"
        android:layout_marginLeft="158dp" />

</android.support.constraint.ConstraintLayout>