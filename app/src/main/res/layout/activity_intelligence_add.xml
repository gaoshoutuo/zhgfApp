    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="情报内容:"
        android:textSize="16sp"
        android:gravity="center|left"/>
    <EditText
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="  请在此处添加情报内容"
        android:gravity="left|top"
        android:textSize="16sp"
        android:scrollbars="vertical"
        android:background="@drawable/yuanjiao"
        android:id="@+id/intelligence_text"
        />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="情报图片:"
        android:textSize="16sp"
        android:gravity="center|left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
      >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icons8_plus96"
            android:scaleType="centerCrop"
            android:id="@+id/intelligence_picture"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/transparent"
            android:scaleType="centerCrop"
            android:id="@+id/intelligence_picture1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/transparent"
            android:scaleType="centerCrop"
            android:id="@+id/intelligence_picture2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/transparent"
            android:scaleType="centerCrop"
            android:id="@+id/intelligence_picture3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/transparent"
            android:scaleType="centerCrop"
            android:id="@+id/intelligence_picture4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/transparent"
            android:scaleType="centerCrop"
            android:id="@+id/intelligence_picture5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/transparent"
            android:scaleType="centerCrop"
            android:id="@+id/intelligence_picture6"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/transparent"
            android:scaleType="centerCrop"
            android:id="@+id/intelligence_picture7"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/transparent"
            android:scaleType="centerCrop"
            android:id="@+id/intelligence_picture8"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
